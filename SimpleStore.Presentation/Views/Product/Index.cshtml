@model IEnumerable<SimpleStore.Business.DTOs.ProductDto>

<h2>Products (@ViewBag.TotalProducts)</h2>
<p>
    <a asp-action="Create">Add Product</a>
</p>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Stock</td>
                <td>
                    <a 
                        asp-action="Details"
                        asp-route-id="@item.Id"
                    >
                        View
                    </a> 
                    | <a 
                        asp-action="Edit"
                        asp-route-id="@item.Id"
                    >
                        Edit
                    </a> 
                    | <form
                        asp-action="Delete"
                        asp-route-id="@item.Id"
                        method="post"
                    >
                    <button 
                        type="Submit"
                        onClick="return confirm('Are you sure?');"
                    >
                        Delete
                    </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>